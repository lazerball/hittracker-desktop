{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2015",
    "jsx": "react",
    "typeRoots": [ "./types", "./@types/", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"]
    }
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.spec.ts"
  ]
}
