{
  "compilerOptions": {
    "lib": ["es2016", "es2017.object"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": false,
    "jsx": "react",
